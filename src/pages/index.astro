---
import Layout from '~/layouts/Layout.astro';
import Section from '~/components/Section.astro';
import Hero from '~/components/Hero.astro';
import { Picture, Image } from 'astro:assets';
import Badge from '~/components/Badge.astro';
import Button from '~/components/Button.astro';
import ButtonCallUs from '~/components/ButtonCallUs.astro';
import ButtonEmail from '~/components/ButtonEmail.astro';
import Grid from '~/components/Grid.astro';
import Heading from '~/components/Heading.astro';
import WideImage from '~/components/WideImage.astro';
import ReviewSlider from '~/components/ReviewSlider.astro';

// Images
import ImgHero from '~/assets/images/b4.png';
import SelfDefense from '~/assets/images/ma4.png';
import BodyBuilding from '~/assets/images/b1.png';
import Relationship from '~/assets/images/s3.png';
import FitnessPlans from '~/assets/images/b10.png';
import MentalHealth from '~/assets/images/s1.png';
import DecorativeImage from '~/assets/images/ma1.jpg';
import reviewAuthors from '~/assets/images/review-authors.png';
import Contact from '~/assets/images/b8.png';
import Profile from '~/assets/images/profile.png';
